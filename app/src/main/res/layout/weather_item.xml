<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle" >

    <TextView
        android:id="@+id/weather_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/empty_value"
        android:textColor="@color/text_white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_city"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:minHeight="50dp"
        android:minWidth="50dp" />

    <View
        android:id="@+id/weather_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/weather_icon"
        android:layout_margin="10dp"
        android:background="@color/rectangle_border" />

    <TextView
        android:id="@+id/weather_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_city"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/weather_icon"
        android:text="@string/empty_value"
        android:textColor="@color/holo_blue_light"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/weather_feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_temp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/weather_icon"
        android:text="@string/empty_value"
        android:textColor="@color/text_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/weather_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_city"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/weather_temp"
        android:text="@string/empty_value"
        android:textColor="@color/text_white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/weather_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_divider"
        android:layout_marginLeft="10dp"
        android:text="@string/empty_value"
        android:textColor="@color/text_white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/weather_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_wind"
        android:layout_marginLeft="10dp"
        android:text="@string/empty_value"
        android:textColor="@color/text_white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/weather_precipitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_humidity"
        android:layout_marginLeft="10dp"
        android:text="@string/empty_value"
        android:textColor="@color/text_white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/weather_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_precipitation"
        android:layout_marginLeft="10dp"
        android:text="@string/empty_value"
        android:textColor="@color/text_white"
        android:textSize="14sp" />

</RelativeLayout>